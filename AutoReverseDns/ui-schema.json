{
  "version": "1.0",
  "appName": "Auto Reverse DNS",
  "description": "Automatically creates and maintains PTR records for A/AAAA records",
  "sections": [
    {
      "id": "general",
      "title": "General Settings",
      "description": "Basic app configuration",
      "fields": [
        {
          "id": "enabled",
          "path": "enabled",
          "type": "switch",
          "label": "Enable App",
          "description": "Global enable/disable switch for the app",
          "default": true
        },
        {
          "id": "syncIntervalSeconds",
          "path": "syncIntervalSeconds",
          "type": "number",
          "label": "Sync Interval",
          "description": "Interval in seconds between sync runs",
          "default": 60,
          "min": 10,
          "max": 86400,
          "suffix": "seconds"
        },
        {
          "id": "ptrTtl",
          "path": "ptrTtl",
          "type": "number",
          "label": "PTR Record TTL",
          "description": "TTL for created PTR records (0 = use zone default)",
          "default": 0,
          "min": 0,
          "max": 604800,
          "suffix": "seconds"
        }
      ]
    },
    {
      "id": "behavior",
      "title": "Behavior",
      "description": "Control how PTR records are created and managed",
      "fields": [
        {
          "id": "createReverseZones",
          "path": "createReverseZones",
          "type": "switch",
          "label": "Create Reverse Zones",
          "description": "Automatically create reverse zones if they don't exist"
        },
        {
          "id": "overwriteExisting",
          "path": "overwriteExisting",
          "type": "switch",
          "label": "Overwrite Existing",
          "description": "Overwrite existing PTR records that point to different hostnames",
          "default": false
        },
        {
          "id": "deleteOrphanedPtrs",
          "path": "deleteOrphanedPtrs",
          "type": "switch",
          "label": "Delete Orphaned PTRs",
          "description": "Delete PTR records when corresponding A/AAAA records are removed",
          "default": false
        },
        {
          "id": "defaultZoneEnabled",
          "path": "defaultZoneEnabled",
          "type": "switch",
          "label": "Enable New Zones by Default",
          "description": "Whether zones not explicitly configured are enabled by default",
          "default": false
        }
      ]
    },
    {
      "id": "cluster",
      "title": "Cluster Mode",
      "description": "Settings for running in a Technitium cluster",
      "fields": [
        {
          "id": "clusterPrimaryOnly",
          "path": "clusterPrimaryOnly",
          "type": "switch",
          "label": "Primary Node Only",
          "description": "In cluster mode, only run sync on the primary node to avoid duplicate PTR creation",
          "default": true
        }
      ]
    },
    {
      "id": "exclusions",
      "title": "Exclusions",
      "description": "Patterns to exclude from PTR generation",
      "fields": [
        {
          "id": "excludePatterns",
          "path": "excludePatterns",
          "type": "list",
          "label": "Exclude Patterns",
          "description": "Zone name patterns to exclude (supports wildcards: *.internal)",
          "default": ["localhost", "*.in-addr.arpa", "*.ip6.arpa"],
          "itemType": "string",
          "placeholder": "Enter pattern (e.g., *.internal)"
        }
      ]
    },
    {
      "id": "zones",
      "title": "Zone Configuration",
      "description": "Per-zone settings for auto-reverse DNS",
      "fields": [
        {
          "id": "zones",
          "path": "zones",
          "type": "keyValue",
          "label": "Zone Overrides",
          "description": "Configure individual zones with specific settings",
          "keyLabel": "Zone Name",
          "keyPlaceholder": "example.com",
          "valueSchema": {
            "fields": [
              {
                "id": "enabled",
                "path": "enabled",
                "type": "switch",
                "label": "Enabled",
                "description": "Enable auto-reverse for this zone",
                "default": true
              },
              {
                "id": "reverseZone",
                "path": "reverseZone",
                "type": "text",
                "label": "Override Reverse Zone",
                "description": "Override the reverse zone to use (optional)",
                "placeholder": "168.192.in-addr.arpa"
              },
              {
                "id": "createReverseZone",
                "path": "createReverseZone",
                "type": "switch",
                "label": "Create Reverse Zone",
                "description": "Override global 'Create Reverse Zones' setting"
              },
              {
                "id": "overwriteExisting",
                "path": "overwriteExisting",
                "type": "switch",
                "label": "Overwrite Existing",
                "description": "Override global 'Overwrite Existing' setting"
              }
            ]
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "sync",
      "label": "Sync Now",
      "description": "Trigger a manual sync of PTR records",
      "method": "POST",
      "endpoint": "/sync",
      "variant": "default"
    },
    {
      "id": "stats",
      "label": "View Stats",
      "description": "View sync statistics",
      "method": "GET",
      "endpoint": "/stats",
      "variant": "outline"
    }
  ]
}
