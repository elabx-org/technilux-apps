{
  "name": "Auto Reverse DNS",
  "version": "1.0.2",
  "description": "Automatically creates and maintains PTR records for A/AAAA records in configured zones. Supports per-zone control, duplicate prevention, automatic reverse zone creation, and cluster mode.",
  "author": "TechniLux",
  "url": "https://github.com/elabx-org/technilux-apps",
  "appRecordDataTemplate": null,
  "configTemplate": {
    "enabled": true,
    "syncIntervalSeconds": 60,
    "createReverseZones": true,
    "overwriteExisting": false,
    "deleteOrphanedPtrs": false,
    "ptrTtl": 0,
    "clusterPrimaryOnly": true,
    "defaultZoneEnabled": false,
    "zones": {},
    "excludePatterns": [
      "localhost",
      "*.in-addr.arpa",
      "*.ip6.arpa"
    ]
  }
}
